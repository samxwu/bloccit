<h1>New Question</h1>
<div class="col-md-8">
    <%= form_for @question do |q| %>
        <div class="form-group">
            <%= q.label :title %>
            <%= q.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
        </div>
        <div class="form-group">
            <%= q.label :body %>
            <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter a question body" %>
        </div>
        <div class="form-group">
            <%= q.label :resolved %>
            <%= q.check_box :resolved %>
        </div>
        <div class="form-group">
            <%= q.submit "Save", class: 'btn btn-success' %>
        </div>
        <% end %>
</div>